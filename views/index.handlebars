<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Artnet Scraper</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if data}}
            {{#each data}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.header}}</h4>
                </div>
                <div class="panel-body">
                    <img src="{{this.image}}" alt="" width="600px">
                    {{!-- <img> {{this.image}}</img> --}}
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <!-- Button -->
                    <button type="button" class="btn btn-default save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Sorry, it looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>